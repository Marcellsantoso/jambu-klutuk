<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/shellfies_base_color</item>
        <item name="background">@color/shellfies_base_color</item>
    </style>

    <!-- ANIMATION -->
    <style name="dialog_animation_fade">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- TEXT -->
    <style name="text" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="textName" parent="text">
        <item name="android:textColor">@drawable/text_click_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textBold" parent="text">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ImageButton style -->
    <style name="imgBtnGreen" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/bg_transparent_xml</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">@dimen/minSize</item>
        <item name="android:layout_height">@dimen/minSize</item>
    </style>

    <!-- Base Button -->
    <style name="btnNormal" parent="android:Widget.Button">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/minSize</item>
    </style>

    <style name="btnTransparent" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_transparent_xml</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:minHeight">@dimen/minSize</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Colored button style -->
    <style name="btnHoloBlueDark" parent="btnNormal">
        <item name="android:background">@drawable/buttonbluedark_btn_default_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Edit text -->
    <style name="edtGreen" parent="android:Widget.EditText">
        <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>