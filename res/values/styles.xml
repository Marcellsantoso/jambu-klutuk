<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <!-- ANIMATION -->
    <style name="dialog_animation_fade">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- TEXT -->
    <style name="text" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="textName" parent="text">
        <item name="android:textColor">@drawable/text_click_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textBold" parent="text">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ImageButton style -->
    <style name="ImageButtonGreen" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/bg_transparent_xml</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_width">@dimen/minSize</item>
        <item name="android:layout_height">@dimen/minSize</item>
    </style>

</resources>